# Local Configuration (Example)
# Copy this file to server.local.yaml and customize for your environment

server:
  host: "0.0.0.0"
  port: 8443                # HTTPSポート
  log_level: "debug"
  use_ssl: true             # 本番環境ではtrue
  ssl_certfile: "/path/to/cert.pem"
  ssl_keyfile: "/path/to/key.pem"

auth:
  api_keys:                 # 本番環境では必ず設定！
    - "your-secure-api-key-here-replace-with-real-key"
    - "another-api-key-for-backup"

buffer:
  max_count: 500
  max_memory_mb: 25
  flush_interval_sec: 5

storage:
  base_dir: "/var/log/mrwebdefence"
